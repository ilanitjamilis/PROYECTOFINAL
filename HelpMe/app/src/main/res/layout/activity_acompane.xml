<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#68CFFA"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="proyectofinal.helpme.ActivityAcompañe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#68CFFA"
            app:srcCompat="@drawable/ic_arrow_back_white" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="323dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/acompanar"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="140dp" />

        <TextView
            android:layout_width="353dp"
            android:layout_height="181dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="32dp"
            android:paddingRight="29dp"
            android:text="Acompañe y tranquilice a la persona hasta que acuda la ayuda"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />


        <Button
            android:id="@+id/btnVolveer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_redondeado"
            android:backgroundTint="#ffffff"
            android:fontFamily="sans-serif"
            android:paddingLeft="5dp"
            android:text="Volver"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="212dp" />



    </LinearLayout>




</FrameLayout>