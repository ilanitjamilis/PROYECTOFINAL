<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.a42102869.helpme.ActividadPrincipal"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:padding="25dp"
                android:id="@+id/imgbtnPolicia"
                android:src="@drawable/policia"
                android:onClick="llamarPolicia"/>

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:padding="25dp"
                android:id="@+id/imgbtnAmbulancia"
                android:src="@drawable/ambulancia"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:padding="25dp"
                android:id="@+id/imgbtnBomberos"
                android:src="@drawable/bomberos"/>

            <ImageButton
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:padding="25dp"
                android:id="@+id/imgbtnMensajeEmergencia"
                android:src="@drawable/help"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="85dp" />

    </LinearLayout>
    
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
